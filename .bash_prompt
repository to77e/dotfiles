#!/bin/bash

git_branch() {
        git branch 2>/dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

get_euid() {
        if [ "$EUID" -ne 0 ]
                then echo "$ "
                else echo "# "
        fi
}

#export TERM="xterm-256color"
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad

PS1="\[\e[0;93m\]\u\[\e[m\]:"
PS1+="\[\e[0;95m\]\w\[\e[m\]"
PS1+="\[\e[0;92m\]\$(git_branch)\[\e[m\]\$(get_euid)"
export PS1



